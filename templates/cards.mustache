<div class='pure-g'>
    <div class='pure-u-3-4'>
      <h1>{{name}}</h1>
    </div>

    <div class='pure-u-1-4 date'>
      <div class='column_header'>
        {{#formatDate}}now{{/formatDate}}
      </div>
    </div>
    <div class='pure-u-4-4'>
      <div class='pure-g'>
        {{#lists}}
        <div class='pure-u-1-4'>
          <div class='column_header'>
            <h2>{{name}}</h2>
          </div>

          <div class='column'>
            {{#cards}}<span class='card'>{{name}}</span>{{/cards}}
          </div>
        </div>
        {{/lists}}
      </div>
    </div>
  </div>
